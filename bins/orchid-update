#!/bin/bash
echo ""
echo "Syncro des métadata, de la liste des paquets disponibles, et vérification de la présence d'updates ..."
echo ""
echo "Attention, si un changement des USE_FLAGS est requis, la commande dispatch-conf est nécessaire pour prendre en compte le changement !"
sudo eix-sync -q && sudo emerge -qavuDN @world && flatpak update && orchid-boot-update && emerge --depclean -q
